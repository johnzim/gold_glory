<div id="sign_in_container">

	<div id="sign_in_content">
		<h1>Sign in</h1>
	<br />
		<%= form_for(:session, :url => sessions_path) do |f| %>
		<ul>
		  	<li>
		  		<%= f.label :email %><br />
    			<%= f.text_field :email %><br /><br />
    		</li>   			
    		<li>
    			<%= f.label :password %><br />
    			<%= f.password_field :password %><br /><br />
 			</li>
  		<div class="actions">
    		<%= f.submit "Sign in" %>
  		</div>
		<% end %>
		<br />
		<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
	</div>
</div>