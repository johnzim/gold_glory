<div id = "content_container">
  <h1>Spend those talent points!</h1>
  <script>
   function tp_spent_total() {
   		console.log("TPspentTotalcalled");
   		var tpsspent = 0;
  		var tpleft = 500;
  		$(".tps_spent").each(function() {
  			tpsspent += Number($(this).text());  			
  			// OR new var = tpspent -500. Test best.
  		}); 
  		tpleft -= tpsspent
  		if (tpleft > 0) {
	  		$("#live_tp_tally").text(""+tpleft +"  Unspent TPs");
  			$('#tp_total_content').removeClass('tp_overspent');
  			$('#tp_total_content').removeClass('tp_perfect');

			$('#tp_total_content').addClass('tp_underspent');


  		}
  		else if (tpleft < 0) {
  			$("#live_tp_tally").text(""+tpleft +" TPs");
  			$('#tp_total_content').removeClass('tp_underspent');
  			$('#tp_total_content').removeClass('tp_perfect');

			$('#tp_total_content').addClass('tp_overspent');

  		}
  		
  		else {
  			$("#live_tp_tally").text("");
  			$('#tp_total_content').removeClass('tp_underspent');
  			$('#tp_total_content').removeClass('tp_overspent');

			$('#tp_total_content').addClass('tp_perfect');

  		}
  		
	};
	
	

	$(document).ready(function() {
		var top = $('#tp_total_content').offset().top - parseFloat($('#tp_total_content').css('marginTop'));
		$(window).scroll(function() {
		//
		///document.getElementById(controlId).offsetTop
	
			// find the y position of the scroll
			var y = 0;
			
			if ((navigator.userAgent.indexOf('iPhone') != -1) || (navigator.userAgent.indexOf('iPod') != -1) || (navigator.userAgent.indexOf('iPad') != -1)) {
			
				y = $(this).scrollTop() - $(window).scrollTop();			
				// if below the start point
			}	
			else{
				y = $(this).scrollTop();
			}	
				
			
			if (y >= top) {
				$('#tp_total_content').addClass('fixed');
			}
			else {
				$('#tp_total_content').removeClass('fixed');
			}
			// if so add fixed
			
			
			// else remove
		});
	});
   
    
  </script>
  

  
